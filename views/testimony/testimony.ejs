<fieldset id="alltestimony_fieldset"> 
<%testimony.forEach(function(message){%>
<div id="comment_fieldset">
    <div>
        <img src="../img/user.svg" alt="landding img" width="50px" class="userimg">   
        </div>
        <div>
        <h3 id="comenttop"><%=message.author%></h3>
         <%=message.testimony%></br>
